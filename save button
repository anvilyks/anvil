editor.Commands.add('store', {
  run: async (editor) => {
    // ğŸ›¡ï¸ warunek: tylko gdy wyraÅºnie chcesz zapisaÄ‡
    if (!window.shouldSave) {
      console.warn("â›” Zapis zablokowany â€“ powinien byÄ‡ tylko przez klikniÄ™cie");
      return;
    }

    window.shouldSave = false; // reset flagi
    console.log("ğŸ’¾ Zapis przez GrapeJS Save Button");

    await editor.store(); // wywoÅ‚uje storage.onSave()
  }
});


storageManager: {
    type: 'local', // Storage type. Available: local | remote
    autosave: true, // Store data automatically
    autoload: true, // Autoload stored data on init
    stepsBeforeSave: 1, // If autosave is enabled, indicates how many changes are necessary before the store method is triggered
    // ...
    // Default storage options
