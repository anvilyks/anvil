/* Komórka nagłówka: układ pionowy, może rosnąć */
.tabulator .tabulator-header .tabulator-col{
  display: flex;
  flex-direction: column;
  height: auto;
}

/* Wnętrze nagłówka rozciągnięte na całą wysokość */
.tabulator .tabulator-header .tabulator-col .tabulator-col-content{
  display: flex;
  flex-direction: column;      /* tytuł u góry */
  flex: 1 1 auto;              /* wypełnij wysokość komórki */
  min-height: 0;
}

/* Tytuł: ZAWIJANIE na 100% – działa także dla długich tokenów */
.tabulator .tabulator-header .tabulator-col .tabulator-col-title{
  white-space: normal !important;     /* wyłącz nowrap */
  overflow-wrap: anywhere !important; /* najskuteczniejsze łamanie */
  word-break: break-word !important;  /* fallback dla części przeglądarek */
  text-overflow: clip !important;     /* żadnych kropek … */
  overflow: visible !important;
  line-height: 1.2;
}

/* Sorter obok tytułu, przy górnej krawędzi (nie podbija filtra) */
.tabulator .tabulator-header .tabulator-col .tabulator-col-title-holder{
  display: flex;
  align-items: flex-start;
  gap: 6px;
}

/* FILTR zawsze przy dole – działa dla obu wariantów DOM Tabulatora */
.tabulator .tabulator-header .tabulator-col .tabulator-col-content > .tabulator-header-filter,
.tabulator .tabulator-header .tabulator-col > .tabulator-header-filter{
  margin-top: auto;  /* dociśnij na dół */
}

/* Jednolity wygląd pól filtrów (opcjonalnie) */
.tabulator .tabulator-header .tabulator-col .tabulator-header-filter input,
.tabulator .tabulator-header .tabulator-col .tabulator-header-filter select{
  width: 100%;
  box-sizing: border-box;
  height: 28px;
}
