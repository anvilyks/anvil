window.destroyGrapeEditor = function() {
  const container = document.getElementById("studio-editor");

  if (window.editorInstance) {
    console.log("üõë Destroying GrapeJS editor");
    window.editorInstance.destroy?.();  // zniszcz edytor
    container.innerHTML = "";           // usu≈Ñ DOM edytora
    window.editorInstance = null;
  } else {
    console.warn("‚ö†Ô∏è No editor to destroy");
  }

  return "destroyed";
};
