function replaceAssetsBlobToCustom(project, blobToFile) {
  if (!project.assets || !Array.isArray(project.assets)) {
    console.warn("[‚ö†Ô∏è] No assets found in project");
    return;
  }

  for (const asset of project.assets) {
    const blobUrl = asset.src;
    const fileName = blobToFile[blobUrl];

    if (blobUrl?.startsWith('blob:') && fileName) {
      const customUrl = `custom:anvil-assets/${fileName}`;
      console.log(`[üéØ] Replacing asset.src "${blobUrl}" ‚Üí "${customUrl}"`);
      asset.src = customUrl;
    } else {
      console.warn(`[‚è≠] Skipping asset ‚Äì no match for blob: ${blobUrl}`);
    }
  }
}
